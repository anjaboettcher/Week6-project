<html lang="en">

<body>
  <header>
    <div class="view"
      style="background-image: url('../images/background.png'); background-repeat: no-repeat; background-size: cover; background-position: center center;">
      <div class="mask rgba-black-light ">
        <div class="container header-container">
            <div class="col-md-12 mb-4 text-center my-auto">
              <h1 class="h1-reponsive text-uppercase font-weight-bold mb-0 pt-md-5 pt-5"><strong>ZEN</strong></h1>
              <hr class="hr-light">
              <h5 class="text-uppercase mb-4 align-middle"><strong>Find your inner ZEN</strong></h5>
            </div>
            <div class ="icon icon-down">
               <a href='#instructions'><i class ="fas fa-angle-double-down "></i></a>
              </div>
        </div>
      </div>
    </div>
  </header>
  <main>


    <div class="container content-container">
      <div class="row py-5">
        <div class="col-md-12 text-center">
          <h2 id="instructions">How ZEN works</h2>
        </div>
      </div>

{{#unless user}}
      <div class ="icon icon-down">
               <a href='#sign-up'><i class ="fas fa-angle-double-down "></i></a>
        </div>
    </div>

    </div>


    <!-- Material form register -->
    <div class = "sign-up-container" id= "sign-up">
      <div class ="container container-inside">
<div class="card">

    <!--Card content-->
    <div class="card-body rounded">
          <h5 class="info-color white-text py-2">
        <strong>Sign up</strong>
    </h5>
        <!-- Form -->
        <form id="form" action="/signup" method="POST" style="color: #757575;">
            <div class="form-row">
                <div class="col">
                    <!-- Username -->
                    <div class="md-form">
                        <input type="text" class="form-control" name="username" placeholder="Your username"><br>
                    </div>
                </div>
            </div>

            <!-- E-mail -->
            <div class="md-form mt-0">
                <input type="text" class="form-control" name="email" placeholder="Your email"><br>
            </div>

            <!-- Password -->
            <div class="md-form">
                <input type="password" class="form-control" name="password" placeholder="********"><br>
                <small id="materialRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4">
                    At least 8 characters and 1 digit
                </small>
            </div>

             {{!-- <div class="md-form mt-0">
              <input type="file" class="form-control" name="pictureUrl" placeholder="Your image">
            </div> --}}

            <!-- Sign up button -->
            <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Sign in</button>
              <p class="form-text text-muted mb-4"> Do you already have an account?<a href="/login"> Login</a></p>
        </form>
  {{/unless}}      

  {{#if message }}
  {{!-- add css --}}
    <div class="alert alert-danger">{{ message }}</div>
  {{/if}}
    </div>
</div>
</div>
</div>
  </main>


<footer>
      <div class="footer-copyright text-center py-3 text-white">© 2019 Copyright:
        <a href="https://www.ironhack.com/" class= "text-white">Created with ♡ @ Ironhack</a>
      </div>
    </footer>
</body>

</html>