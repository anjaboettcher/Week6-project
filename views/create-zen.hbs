<div class="main-container">


    <div class="card">
        <div class="card-body ">
                <h1> Create Zen</h1>
            <!-- Form -->
            <form id="form" action="/main/send-zen" method="POST" enctype="multipart/form-data">
            <div class="form-row">
                    <div class="col">
                        <div class="md-form">
                            <input type="email" class="form-control" name="destination" placeholder="Destination Email"><br>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        <div class="md-form">
                            <input type="text" class="form-control" name="title" placeholder="Title"><br>
                        </div>
                    </div>
                </div>
                <div class="md-form mt-0">
                    <input type="text" class="form-control" name="description" placeholder="Description"><br>
                </div>
                <div class="custom-file">        
                    <input type="file" class="form-control-file custom-file-input" id="createCustomFile" name="image">
                    <label class="custom-file-label" for="customFile"></label>

                </div><br><br>
                <div class="input-group md-form mt-0">
                    <input class="form-control" name="links[]" type="text" placeholder="Type something" />
                    <button class="btn btn-info btn-rounded waves-effect z-depth-0" type="button" onclick="add_link_field()">
                        <span>+</span>
                    </button>
                </div>
                <br>
                <div class="link_fields">

                </div>
                <div class="md-form mt-0">
                    <input type="text" class="form-control" name="additional_info" placeholder="Additional Info"><br>
                </div>
                

                <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0"
                    type="submit">Send</button>

            </form>
        </div>

    </div>