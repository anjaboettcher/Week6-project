<div class="main-container">
    <div class = "container">
    <h1>Zen Board</h1>
    {{#if zens}}
    <div class="row">
        {{#each zens}}
        <div class="col-md-4">
            <div class="card">
                <img src="{{this.image}}" alt="">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text"><small class="text-muted">Sent at
                            {{dateFormat this.created_at}}</small></p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <h2>Looks like you don't have any Zens yet... Click <span><a href="/main/create-zen">here</a> </span>and start Zening now!</h2>
    {{/if}}
</div>
</div>