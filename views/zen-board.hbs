<div class="container">
    <h1>Zen Board</h1>
    <div class="row">
        {{#each zens}}
        <div class="col-md-4">
            <div class="card">
                <img src="{{this.image}}" alt="">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text"><small class="text-muted">Sent by {{this._creator}} at
                            {{dateFormat this.created_at}}</small></p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>