<div class="main-container ">
    <div class ="container">
    <h5 class ="text-center">Zen History</h5>
                    <form class="form-inline" id="search-form">
                  <div class="md-form my-0">
                    <input id="search-input" class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                  </div>
                </form>
                <br>
     <small id="no-results-message">No results.</small>
    {{#if zens}}
    <div class="row card-columns">
        {{#each zens}}
        <div class="col-md-4 mb-4 mt-4">
            <div class="card text-center rounded h-100  no-border">
                <div class="card h-100">
                <button type="button" class="close close-card" aria-label="Close">
                    <span aria-hidden="true" data-toggle="modal"
                        data-target="#exampleModal{{this._id}}">&times;</span>
                </button>
                <img src="{{this.image}}" class = "zen-image" alt="">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                     <p class="card-text">{{this.additional_info}}</p>
                    <p class="card-text">{{this.links}}</p>
                    <p class="card-text"><small class="text-muted">Sent by {{this._creator.username}} at
                            {{dateFormat this.created_at}}</small></p>
                            <div class="card-footer no-border">
                        <a href="/main/resend-zen/{{this._id}}" class="btn btn-outline-info btn-rounded btn-block">Resend</a>
                        </div> 
                </div>
            </div>
        </div>
        <div class="modal fade" id="exampleModal{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <h5 class="modal-title" id="exampleModalLabel">Delete Zen?</h5>
                        <div class="modal-links text-right">
                            <a href="/main/delete-zen/{{this._id}}" class="modal-delete-button">Delete</a>
                            <a data-dismiss="modal">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

        {{/each}}
    </div>
    {{else}}

<div class="alert alert-info mt-4 text-center" role="alert">
    <h5>Here you will see all Zens you have previously created! Click <span><a href="/main/create-zen">here</a> </span>to start Zening now!</h5>

</div>
    {{/if}}
</div>
</div>
